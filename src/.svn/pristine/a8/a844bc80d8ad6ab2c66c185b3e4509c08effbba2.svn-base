                this.ShowAllTrue = false;
                this.YearmonthQuartTrue = true;//added after feedback
                if (this.SelectedSearchYear == null)
                    this.SelectedSearchYear = DateTime.Now.Year.ToString();
                switch (SearchFilter)
                {
                    case "1":
                        this.FirstMonth = "Jan";
                        this.SecondMonth = "Feb";
                        this.ThirdMonth = "Mar";
                        this.QuarterName = "Quarter 1";
                        break;
                    case "2":
