<UserControl x:Class="SASClient.Product.View.PandSStockCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SASClient.Product.View"
             xmlns:helpers="clr-namespace:SDN.Common.Converter;assembly=SDN.Common"
             xmlns:my="clr-namespace:SDN.Common;assembly=SDN.Common"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             mc:Ignorable="d" Width="1024"
             d:DesignHeight="300" d:DesignWidth="300">
    <ScrollViewer  HorizontalAlignment="Stretch" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid >
            <Grid.Resources>
                <helpers:TextInputToVisibilityConverter x:Key="TextInputToVisibilityConverter"/>
                <helpers:DateTimeConverter x:Key="DateTimeFormatter"></helpers:DateTimeConverter>
                <helpers:MultipleParameterConverter x:Key="MultiParamterConverter"></helpers:MultipleParameterConverter>
                <!--<SolidColorBrush x:Key="brushWatermarkForeground" Color="LightSteelBlue" />-->
                <Style x:Key="BorderStyle" TargetType="{x:Type Border}">
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                </Style>
                <!--Watermark style start here-->
                <SolidColorBrush x:Key="brushWatermarkBackground" Color="White" />
                <SolidColorBrush x:Key="brushWatermarkForeground" Color="Gray" />
                <SolidColorBrush x:Key="brushWatermarkBorder" Color="Black" />
                <!--Watermark style End here-->
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"></ColumnDefinition>
                <ColumnDefinition Width="256"></ColumnDefinition>
                <ColumnDefinition Width="256"></ColumnDefinition>
                <ColumnDefinition Width="212"></ColumnDefinition>
                <!--<ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>-->
            </Grid.ColumnDefinitions>

            <!--<StackPanel  Grid.Column="5" Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Right" Margin="0 0 0 0">
                <Label  HorizontalAlignment="Right" Foreground="Black"  Margin="10,0,0,2" Content="Last Updated" />
                <TextBlock x:Name="LastUpdatedDate"  Margin="10,0,5,2" Grid.Row="0" HorizontalAlignment="Right"  Text="{Binding LastUpdateDate}"  />
                <Button x:Name="btnRefresh" Content="Refresh"  VerticalAlignment="Center" HorizontalAlignment="Right" Width="75"  Margin="0,4,0,4" Style="{DynamicResource ButtonStyle}" Command="{Binding RefreshCommand}"/>
            </StackPanel>-->

            <Grid Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="2" MaxWidth="300" MinWidth="300" HorizontalAlignment="Left" Margin="10 0 0 0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".25*"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <!--<RadioButton Grid.Row="0" Grid.Column="0" x:Name="radyearmonthYes" GroupName="radSelectionparameter" Margin="0 0 5 0"
                       Command="{Binding YearQuarterSelectedCommand}"       IsChecked="{Binding  YearmonthQuartTrue, BindingGroupName=Group1, UpdateSourceTrigger=PropertyChanged}"></RadioButton>-->
                <TextBlock Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Year"></TextBlock>
                <TextBlock Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Quater"></TextBlock>
                <TextBlock Grid.Row="0" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Month"></TextBlock>
                <ComboBox BorderBrush="Black" Grid.Row="1" Grid.Column="1" IsEnabled="{Binding EnableYearDropDown}" IsEditable="True" 
                          ItemsSource="{Binding YearRange}" 
                      DisplayMemberPath="Year" SelectedValuePath="Year" Name="cmbYearSearch"
                      SelectedValue="{Binding SelectedSearchYear ,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></ComboBox>
                <ComboBox BorderBrush="Black" Grid.Row="1" Grid.Column="2" IsEnabled="{Binding EnableQuarterDropDown}" IsEditable="True" IsTextSearchEnabled="True"     
                      IsTextSearchCaseSensitive="False"     
                      StaysOpenOnEdit="True"    
                      TextSearch.TextPath="{Binding Quarter}"
                          ItemsSource="{Binding QuarterList}" 
                      DisplayMemberPath="Quarter" SelectedValuePath="ID" Name="cmbQuarterSearch"
                      SelectedValue="{Binding SelectedSearchQuarter ,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></ComboBox>
                <ComboBox BorderBrush="Black" Grid.Row="1" Grid.Column="3" IsEnabled="{Binding EnableMonthDropDown}" IsEditable="True"
                          ItemsSource="{Binding MonthList}" 
                      DisplayMemberPath="Month" SelectedValuePath="ID" Name="cmbMonthSearch"
                      SelectedValue="{Binding SelectedSearchMonth ,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></ComboBox>
                <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource BorderStyle}"></Border>
                <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource BorderStyle}"></Border>
                <Border Grid.Column="2" Grid.Row="0" Style="{StaticResource BorderStyle}"></Border>
                <Border Grid.Column="2" Grid.Row="1" Style="{StaticResource BorderStyle}" HorizontalAlignment="Right" Width="92"></Border>
                <Border Grid.Column="3" Grid.Row="0" Style="{StaticResource BorderStyle}"></Border>
                <Border Grid.Column="3" Grid.Row="1" Style="{StaticResource BorderStyle}"></Border>

            </Grid>
            <TextBlock Margin="0,-10,0,10" Grid.ColumnSpan="2" Grid.Column="0" VerticalAlignment="Top"
                               Grid.Row="3" >Click on a Product Code or Product Name to see Transactions details</TextBlock>
            <ComboBox Background="Transparent" BorderBrush="{StaticResource brushWatermarkBorder}" Grid.Column="1" Grid.Row="3" IsEditable="True" HorizontalAlignment="Left" Margin="10,10,0,0" MaxHeight="30" VerticalAlignment="Top" MaxWidth="70" MinWidth="70"
                      ItemsSource="{Binding StockCardListcmbTranType}" 
                      DisplayMemberPath="TransactionType" SelectedValuePath="TransactionType" Name="cmbSuppNameSearch"
                      SelectedValue="{Binding SelectedTransactionType }" />

            <TextBlock Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Top"  Height="28"  Style="{StaticResource WaterMarkStyle}" Margin="10,10,0,0"  Text="Search" Foreground="{StaticResource brushWatermarkForeground}" >
                <TextBlock.Visibility>
                    <MultiBinding Converter="{StaticResource TextInputToVisibilityConverter}">
                        <Binding ElementName="cmbSuppNameSearch" Path="Text.IsEmpty" />
                        <Binding ElementName="cmbSuppNameSearch" Path="IsFocused" />
                    </MultiBinding>
                </TextBlock.Visibility>
            </TextBlock>
            <ComboBox Background="Transparent" BorderBrush="{StaticResource brushWatermarkBorder}" Grid.Column="1" Grid.Row="3" IsEditable="True" HorizontalAlignment="Left" Margin="82,10,0,0" MaxHeight="30" VerticalAlignment="Top" MaxWidth="150" MinWidth="122"
                      ItemsSource="{Binding StockCardNameListDetails}" 
                      DisplayMemberPath="Name" SelectedValuePath="Name" Name="cmbQuotNoSearch"
                      SelectedValue="{Binding SelectedName }" />
            <TextBlock Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="3" Height="28"  Style="{StaticResource WaterMarkStyle}" Margin="90,13,0,0"  Text="Search" Foreground="{StaticResource brushWatermarkForeground}" >
                <TextBlock.Visibility>
                    <MultiBinding Converter="{StaticResource TextInputToVisibilityConverter}">
                        <Binding ElementName="cmbQuotNoSearch" Path="Text.IsEmpty" />
                        <Binding ElementName="cmbQuotNoSearch" Path="IsFocused" />
                    </MultiBinding>
                </TextBlock.Visibility>
            </TextBlock>
            <DockPanel Grid.Row="2" Grid.Column="0">
                <TextBlock Margin="25,10,5,1" Name="lblPSCat1" Text="P&amp;S Category 1"></TextBlock>
                <ComboBox Name="cmbPSCat1" SelectedValue="{Binding SelectedCategoryType1 ,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"  MaxHeight="25"
                   Width="145" Margin="-5,5,9,1"  ItemsSource="{Binding PSCategory1}" DisplayMemberPath="ContentName"
                          SelectedValuePath="ContentID" ></ComboBox>
            </DockPanel>
            <DockPanel Grid.Row="2" Grid.Column="1">
                <TextBlock Margin="10" Name="lblPSCat2" Text="P&amp;S Category 1"></TextBlock>
                <ComboBox Name="cmbPSCat2" SelectedValue="{Binding SelectedCategoryType2 ,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"  MaxHeight="25"
                   Width="145"   ItemsSource="{Binding PSCategory2}" DisplayMemberPath="ContentName"
                          SelectedValuePath="ContentID"></ComboBox>
            </DockPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="2"  Grid.Row="2" Margin="15 14 0 0">
                <RadioButton x:Name="radExcgstYes" Command="{Binding ShowExcludingTaxCommand}"    Margin="10 2 10 2"   GroupName="radTax" TabIndex="14" HorizontalAlignment="Left" IsChecked="{Binding IncludingGSTTrue, BindingGroupName=Group1, UpdateSourceTrigger=PropertyChanged}">
                    <DockPanel>
                        <TextBlock  Text="exc. "></TextBlock>
                        <TextBlock  Text="{Binding TaxName}" Margin="2,1,2,1"></TextBlock>

                    </DockPanel>
                </RadioButton>
                <RadioButton x:Name="radIncgstyes"  Margin="10 2 10 2" Command="{Binding ShowIncludingTaxCommand}"    GroupName="radTax" TabIndex="15"  HorizontalAlignment="Left"  IsChecked="{Binding IncludingGSTFalse, BindingGroupName=Group1, UpdateSourceTrigger=PropertyChanged}">
                    <DockPanel>
                        <TextBlock  Text="inc. "></TextBlock>
                        <TextBlock  Text="{Binding TaxName}" Margin="2,1,2,1"></TextBlock>

                    </DockPanel>
                </RadioButton>
            </StackPanel>



            <!--<ComboBox Background="Transparent" BorderBrush="{StaticResource brushWatermarkBorder}" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="3" IsEditable="True" HorizontalAlignment="Left" Margin="80 10 0 0" MaxHeight="30" VerticalAlignment="Top" MaxWidth="150" MinWidth="122"
                      ItemsSource="{Binding StockCardListProductDetails}" 
                      DisplayMemberPath="Name" SelectedValuePath="Name" Name="cmbQuotNoSearch"
                      SelectedValue="{Binding SelectedName }">
            </ComboBox>-->

            <!--<TextBlock Grid.Column="2" VerticalAlignment="Top"  Style="{StaticResource WaterMarkStyle}"  Grid.Row="3" Height="30" Margin="59 13 0 0"  Text="Search" Foreground="{StaticResource brushWatermarkForeground}" >
                <TextBlock.Visibility>
                    <MultiBinding Converter="{StaticResource TextInputToVisibilityConverter}">
                        <Binding ElementName="cmbTranNo" Path="Text.IsEmpty" />
                        <Binding ElementName="cmbTranNo" Path="IsFocused" />
                    </MultiBinding>
                </TextBlock.Visibility>
            </TextBlock>-->
            <!--<ComboBox Background="Transparent" BorderBrush="{StaticResource brushWatermarkBorder}"  Grid.Column="2" Grid.Row="3"  IsEditable="True" HorizontalAlignment="Left" Margin="55 10 0 0" MaxHeight="30" VerticalAlignment="Top" MaxWidth="100" MinWidth="100"
                      ItemsSource="{Binding StockCardListcmbTranNo}" 
                      DisplayMemberPath="TransactionNo" SelectedValuePath="TransactionNo" Name="cmbTranNo"
                      SelectedValue="{Binding SelectedTransactionNo ,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
            </ComboBox>-->
            <!--<TextBlock Grid.Column="2" VerticalAlignment="Top"  Style="{StaticResource WaterMarkStyle}"  Grid.Row="3" Height="30" Margin="158 13 0 0"  Text="Search" Foreground="{StaticResource brushWatermarkForeground}" >
                <TextBlock.Visibility>
                    <MultiBinding Converter="{StaticResource TextInputToVisibilityConverter}">
                        <Binding ElementName="cmbDate" Path="Text.IsEmpty" />
                        <Binding ElementName="cmbDate" Path="IsFocused" />
                    </MultiBinding>
                </TextBlock.Visibility>
            </TextBlock>
            <ComboBox Background="Transparent" BorderBrush="{StaticResource brushWatermarkBorder}"  Grid.Column="2" Grid.Row="3"  IsEditable="True" HorizontalAlignment="Left" Margin="155 10 0 0" MaxHeight="30" VerticalAlignment="Top" MaxWidth="80" MinWidth="80"
                      ItemsSource="{Binding StockCardListcmbDate}" 
                      DisplayMemberPath="TransactionDateStr" SelectedValuePath="TransactionDateStr" Name="cmbDate"
                      SelectedValue="{Binding SelectedTranDate ,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
            </ComboBox>
            <TextBlock VerticalAlignment="Top"  Style="{StaticResource WaterMarkStyle}"  Grid.Row="3" Grid.Column="3" Height="30" Margin="-17 13 0 0"  Text="Search" Foreground="{StaticResource brushWatermarkForeground}" >
                <TextBlock.Visibility>
                    <MultiBinding Converter="{StaticResource TextInputToVisibilityConverter}">
                        <Binding ElementName="cmbAmount" Path="Text.IsEmpty" />
                        <Binding ElementName="cmbAmount" Path="IsFocused" />
                    </MultiBinding>
                </TextBlock.Visibility>
            </TextBlock>
            <ComboBox Background="Transparent" BorderBrush="{StaticResource brushWatermarkBorder}" Grid.ColumnSpan="2"  Grid.Column="3" Grid.Row="3"  IsEditable="True" HorizontalAlignment="Left" Margin="-20 10 0 0" MaxHeight="30" VerticalAlignment="Top" MaxWidth="100" MinWidth="100"
                      ItemsSource="{Binding StockCardListcmbAmount}" 
                      DisplayMemberPath="AmountStr" SelectedValuePath="AmountStr" Name="cmbAmount"
                      SelectedValue="{Binding SelectedAmountStr ,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
            </ComboBox>
            <ComboBox Background="Transparent" BorderBrush="{StaticResource brushWatermarkBorder}"   Grid.Column="3" Grid.Row="3"  IsEditable="True" HorizontalAlignment="Left" Margin="78 10 0 0" MaxHeight="30" VerticalAlignment="Top" MaxWidth="150" MinWidth="150"
                      ItemsSource="{Binding StockCardListcmbUserName}" 
                      DisplayMemberPath="UserName" SelectedValuePath="UserName" Name="cmbUserName"
                      SelectedValue="{Binding SelectedCreditNoteNo ,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
            </ComboBox>-->

            <StackPanel   
                         Grid.Row="3" Grid.Column="0"  Margin="10,40,10,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="26*"/>
                        <ColumnDefinition Width="26*"/>
                        <!--<ColumnDefinition Width="12*"/>
                        <ColumnDefinition Width="14"/>
                        <ColumnDefinition Width="15*"/>
                        <ColumnDefinition Width="133"/>
                        <ColumnDefinition Width="40*"/>-->
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="CustomGridLines1" ItemsSource="{Binding BackGroundLines}" Grid.Column="0" 
                          Height="{Binding ElementName=dg1,Path=ActualHeight}" GridLinesVisibility="All"   Width="{Binding ElementName=dg1,Path=ActualWidth}"
                          HorizontalGridLinesBrush="LightGray" VerticalGridLinesBrush="LightGray" AutoGenerateColumns="False" 
                           HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled"
                          ColumnHeaderStyle="{StaticResource BackHeaderStyle20}" HeadersVisibility="All" Margin="0,0,-424,0" Grid.ColumnSpan="7"  >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="" Binding="{Binding Col0}"  Width="150"></DataGridTextColumn>
                            <DataGridTextColumn Header="" Binding="{Binding Col1}"  Width="150"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                   
                    <TextBlock Grid.Column="0" VerticalAlignment="Top"  Style="{StaticResource WaterMarkStyle}" Height="30" Margin="1 -25 0 0"  Text="Search" Foreground="{StaticResource brushWatermarkForeground}" Grid.ColumnSpan="5" >
                        <TextBlock.Visibility>
                            <MultiBinding Converter="{StaticResource TextInputToVisibilityConverter}">
                                <Binding ElementName="cmbSearch1" Path="Text.IsEmpty" />
                                <Binding ElementName="cmbSearch1" Path="IsFocused" />
                            </MultiBinding>
                        </TextBlock.Visibility>
                    </TextBlock>
                    <TextBlock VerticalAlignment="Top"  Style="{StaticResource WaterMarkStyle}" Height="30" Margin="35,-25,0,0"  Text="Search" Foreground="{StaticResource brushWatermarkForeground}" Grid.ColumnSpan="2" Grid.Column="5" >
                        <TextBlock.Visibility>
                            <MultiBinding Converter="{StaticResource TextInputToVisibilityConverter}">
                                <Binding ElementName="cmbSearch2" Path="Text.IsEmpty" />
                                <Binding ElementName="cmbSearch2" Path="IsFocused" />
                            </MultiBinding>
                        </TextBlock.Visibility>
                    </TextBlock>

                    <ComboBox Background="Transparent" BorderBrush="{StaticResource brushWatermarkBorder}" Grid.Column="0" Grid.ColumnSpan="6" IsEditable="True" HorizontalAlignment="Left" Margin="1 -29 0 0" MaxHeight="30" VerticalAlignment="Top" MaxWidth="140" MinWidth="140"
                      ItemsSource="{Binding StockCardListcmb}" 
                      DisplayMemberPath="ProductCode" SelectedValuePath="ProductCode" Name="cmbSearch1"
                      SelectedValue="{Binding SelectedPandSCode }" />
                    <ComboBox Background="Transparent" BorderBrush="{StaticResource brushWatermarkBorder}" Grid.Column="5" IsEditable="True" HorizontalAlignment="Left" Margin="0,-29,0,0" MaxHeight="30" VerticalAlignment="Top" MaxWidth="140" MinWidth="140"
                      ItemsSource="{Binding StockCardListcmbPn}" 
                      DisplayMemberPath="ProductName" SelectedValuePath="ProductName" Name="cmbSearch2"
                      SelectedValue="{Binding SelectedPandSName }" Grid.ColumnSpan="2"/>

                    <Grid  Grid.ColumnSpan="7" >
                        <DataGrid x:Name="CustomGridLines2" ItemsSource="{Binding BackGroundLines}" Grid.Column="0" 
                          Height="{Binding ElementName=dg1,Path=ActualHeight}" GridLinesVisibility="All"   Width="{Binding ElementName=dg1,Path=ActualWidth}"
                          HorizontalGridLinesBrush="LightGray" VerticalGridLinesBrush="LightGray" AutoGenerateColumns="False" 
                           HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled"
                          ColumnHeaderStyle="{StaticResource BackHeaderStyle20}" HeadersVisibility="All" Margin="0,0,0,0"  >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="" Binding="{Binding Col0}"  Width="140"></DataGridTextColumn>
                                <DataGridTextColumn Header="" Binding="{Binding Col1}"  Width="150"></DataGridTextColumn>

                            </DataGrid.Columns>
                        </DataGrid>
                        <DataGrid Grid.ColumnSpan="3" IsTextSearchEnabled="True"   GridLinesVisibility="All" IsReadOnly="True" BorderThickness="1" 
                  HorizontalScrollBarVisibility="Disabled"  SelectedValuePath="ProductCode" MinHeight="100"  Height="{Binding SIGridHeight}"  x:Name="dg2" ItemsSource="{Binding StockCardList}" CanUserAddRows="False" 
                  ColumnHeaderStyle="{StaticResource HeaderStyle20}" SelectedValue="{Binding ProductCode,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Background="Transparent"  CanUserDeleteRows="False" SelectionMode="Single" VerticalAlignment="Top" AutoGenerateColumns="False"  >

                            <DataGrid.Columns>
                                <DataGridTemplateColumn x:Name="ProductCode" Width="140" MaxWidth="150" Header="Product Code" >
                                    <DataGridTemplateColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Grid Width="182">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition></RowDefinition>

                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="100" />
                                                    <ColumnDefinition  Width="10"/>
                                                    <ColumnDefinition Width="{Binding ElementName=TransactionType,Path=ActualWidth}"/>
                                                </Grid.ColumnDefinitions>
                                                <DockPanel Grid.Row="0" Grid.Column="0">
                                                    <TextBlock Text="{TemplateBinding Content}"  />
                                                    <Image Source="/SASClient;component/Images/Shorting-Arrow-2.png"
                                                Width="10" Height="20"
                                           HorizontalAlignment="Left"
                                           Grid.Column="1"/>
                                                </DockPanel>

                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.HeaderTemplate>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                                  <TextBlock Text="{Binding ProductCode}" /></TextBlock>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn x:Name="ProductName" Width="150" MaxWidth="150" Header="Product Name" >
                                    <DataGridTemplateColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <Grid Width="182">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition></RowDefinition>

                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition  Width="10"/>
                                                    <ColumnDefinition Width="{Binding ElementName=TransactionType,Path=ActualWidth}"/>
                                                </Grid.ColumnDefinitions>
                                                <DockPanel Grid.Row="0" Grid.Column="0">
                                                    <TextBlock Text="{TemplateBinding Content}"  />
                                                    <Image Source="/SASClient;component/Images/Shorting-Arrow-2.png"
                                                Width="10" Height="20"
                                           HorizontalAlignment="Left"
                                           Grid.Column="1"/>
                                                </DockPanel>

                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.HeaderTemplate>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                                  <TextBlock Text="{Binding ProductName}" /></TextBlock>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                            </DataGrid.Columns>
                            <DataGrid.Resources>
                                <Style TargetType="DataGridRow">
                                    <Style.Resources>
                                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="Black"/>
                                    </Style.Resources>
                                </Style>
                            </DataGrid.Resources>

                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="SelectionChanged">
                                    <i:InvokeCommandAction Command="{Binding SelectChangedCommand}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected"
                                                     Value="True">
                                            <Setter Property="BorderBrush"
                                                 Value="Black" />
                                            <Setter Property="Background"
                                                    Value="Black" />
                                            <Setter Property="Foreground"
                                                 Value="White" />

                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.CellStyle>
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected"
                                                     Value="True">
                                            <Setter Property="BorderBrush"
                                                 Value="Black" />
                                            <Setter Property="Background"
                                                    Value="Black" />
                                            <Setter Property="Foreground"
                                                 Value="White" />

                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                        </DataGrid>
                    </Grid>
                </Grid>

            </StackPanel>
            <!--<ScrollViewer VerticalScrollBarVisibility="Auto"  Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="6" Margin="-10,30,0,0">-->
            <StackPanel   
                         Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Margin="10,40,10,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100*"/>
                        <ColumnDefinition Width="37*"/>
                        <ColumnDefinition Width="215*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="CustomGridLines" ItemsSource="{Binding BackGroundLines}" Grid.Column="0" 
                          Height="{Binding ElementName=dg1,Path=ActualHeight}" GridLinesVisibility="All"   Width="{Binding ElementName=dg1,Path=ActualWidth}"
                          HorizontalGridLinesBrush="LightGray" VerticalGridLinesBrush="LightGray" AutoGenerateColumns="False" 
                           HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled"
                          ColumnHeaderStyle="{StaticResource BackHeaderStyle20}" HeadersVisibility="All" Margin="0,0,0,0" Grid.ColumnSpan="3"  >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="" Binding="{Binding Col0}"  Width="70"></DataGridTextColumn>
                            <DataGridTextColumn Header="" Binding="{Binding Col1}"  Width="120"></DataGridTextColumn>
                            <DataGridTextColumn Header="" Binding="{Binding Col2}"  Width="80"></DataGridTextColumn>
                            <DataGridTextColumn Header="" Binding="{Binding Col3}"  Width="100"></DataGridTextColumn>
                            <DataGridTextColumn Header="" Binding="{Binding Col4}"  Width="80"></DataGridTextColumn>
                            <DataGridTextColumn Header="" Binding="{Binding Col4}"  Width="80"></DataGridTextColumn>
                            <DataGridTextColumn Header="" Binding="{Binding Col4}"  Width="80"></DataGridTextColumn>
                            <DataGridTextColumn Header="" Binding="{Binding Col4}"  Width="80"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <DataGrid Grid.ColumnSpan="3" IsTextSearchEnabled="True"   GridLinesVisibility="All" 
                  HorizontalScrollBarVisibility="Disabled" MinHeight="100"  Height="{Binding SIGridHeight}"  BorderThickness="1" x:Name="dg1" ItemsSource="{Binding StockCardListProductDetails}" CanUserAddRows="False" 
                  ColumnHeaderStyle="{StaticResource HeaderStyle20}"  Background="Transparent"  CanUserDeleteRows="False" SelectionMode="Single" VerticalAlignment="Top" AutoGenerateColumns="False"  >
                        <DataGrid.Columns>
                            <DataGridTemplateColumn x:Name="TransactionType" Width="70" MaxWidth="70" Header="Trans Type" SortMemberPath="TransactionType" CanUserSort="False" >
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid Width="182">
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>

                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <!--<ColumnDefinition Width="auto" />
                                                <ColumnDefinition  Width="10"/>-->
                                                <ColumnDefinition Width="{Binding ElementName=TransactionType,Path=ActualWidth}"/>
                                            </Grid.ColumnDefinitions>
                                            <DockPanel Grid.Row="0" Grid.Column="0">
                                                <TextBlock Text="{TemplateBinding Content}"  />
                                                <!--<Image Source="/SASClient;component/Images/Shorting-Arrow-2.png"
                                                Width="10" Height="20"
                                           HorizontalAlignment="Left"
                                           Grid.Column="1"
                                             />-->
                                            </DockPanel>

                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                                  <TextBlock Text="{Binding TransactionType}" /></TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn x:Name="Name" MinWidth="120"  MaxWidth="120" Header="Cus/Sup Name"  Width="Auto" SortMemberPath="Name" CanUserSort="False">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>

                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="{Binding ElementName=Name,Path=ActualWidth}"/>
                                            </Grid.ColumnDefinitions>
                                            <DockPanel Grid.Row="0" Grid.Column="0">
                                                <TextBlock Text="{TemplateBinding Content}"  HorizontalAlignment="Right"/>
                                                <!--<Image Source="/SASClient;component/Images/Shorting-Arrow-2.png"
                                                Width="10" Height="20"
                                           HorizontalAlignment="Left"
                                           Grid.Column="1"/>-->
                                            </DockPanel>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Left"><Hyperlink Command="{Binding DataContext.NavigateToClientCommand, RelativeSource={RelativeSource
                                            AncestorType={x:Type UserControl}}}" IsEnabled="{Binding NoHyperLink}">
                                            <InlineUIContainer>
                                                 <TextBlock HorizontalAlignment="Left" Text="{Binding Name}" />
                                             </InlineUIContainer>
                                            <Hyperlink.CommandParameter>
                                            <MultiBinding Converter="{StaticResource MultiParamterConverter}">
                                                 <Binding Path="ID"/>
                                                 <Binding Path="TransactionType"/>
                                             </MultiBinding>
                                        </Hyperlink.CommandParameter>
                                        </Hyperlink>
                                      </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>

                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn x:Name="Date" MinWidth="80" MaxWidth="80" Header="Date"  Width="Auto" SortMemberPath="TransactionDate" HeaderStyle="{StaticResource HeaderStyle20Right}">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="{Binding ElementName=DateTime,Path=ActualWidth}"/>
                                            </Grid.ColumnDefinitions>
                                            <DockPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right">
                                                <TextBlock Text="{TemplateBinding Content}"  />
                                                <Image Source="/SASClient;component/Images/Shorting-Arrow-2.png"
                                                Width="10" Height="20"
                                           HorizontalAlignment="Left"
                                           Grid.Column="1"/>
                                            </DockPanel>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Right" Text="{Binding InvoiceDate}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>

                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn x:Name="TransactionNo" MinWidth="100" MaxWidth="100" Header="Transaction No."  Width="Auto" SortMemberPath="TransactionNo"  HeaderStyle="{StaticResource HeaderStyle20Right}" CanUserSort="False">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>

                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="{Binding ElementName=TransactionNo,Path=ActualWidth}"/>
                                            </Grid.ColumnDefinitions>
                                            <DockPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right">
                                                <TextBlock Text="{TemplateBinding Content}" HorizontalAlignment="Right" />
                                                <!--<Image Source="/SASClient;component/Images/Shorting-Arrow-2.png"
                                                Width="10" Height="20"
                                           HorizontalAlignment="Left"
                                           Grid.Column="1" />-->
                                            </DockPanel>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Right"><Hyperlink CommandParameter="{Binding TransactionNo}" Command="{Binding DataContext.NavigaetoStockCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                                ><InlineUIContainer>   
                                                  <TextBlock HorizontalAlignment="Right" Text="{Binding TransactionNo}" />
                                              </InlineUIContainer>
                                        </Hyperlink></TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>

                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn x:Name="Price" MinWidth="80" MaxWidth="80" Header="Price"  Width="Auto" SortMemberPath="TransactionDate" HeaderStyle="{StaticResource HeaderStyle20Right}" CanUserSort="False">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="{Binding ElementName=DateTime,Path=ActualWidth}"/>
                                            </Grid.ColumnDefinitions>
                                            <DockPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right">
                                                <TextBlock Text="{TemplateBinding Content}"  />
                                                <!--<Image Source="/SASClient;component/Images/Shorting-Arrow-2.png"
                                                Width="10" Height="20"
                                           HorizontalAlignment="Left"
                                           Grid.Column="1"/>-->
                                            </DockPanel>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Right" Text="{Binding Price}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>

                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn x:Name="QtyIn" MinWidth="80" MaxWidth="80" Header="Qty In"  Width="Auto" SortMemberPath="QtyIn" HeaderStyle="{StaticResource HeaderStyle20Right}" CanUserSort="False">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="{Binding ElementName=DateTime,Path=ActualWidth}"/>
                                            </Grid.ColumnDefinitions>
                                            <DockPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right">
                                                <TextBlock Text="{TemplateBinding Content}"  />
                                                <!--<Image Source="/SASClient;component/Images/Shorting-Arrow-2.png"
                                                Width="10" Height="20"
                                           HorizontalAlignment="Left"
                                           Grid.Column="1"/>-->
                                            </DockPanel>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Right" Text="{Binding QtyIn}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>

                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn x:Name="QtyOut" MinWidth="80" MaxWidth="80" Header="Qty Out"  Width="Auto" SortMemberPath="TransactionDate" HeaderStyle="{StaticResource HeaderStyle20Right}" CanUserSort="False">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="{Binding ElementName=DateTime,Path=ActualWidth}"/>
                                            </Grid.ColumnDefinitions>
                                            <DockPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right">
                                                <TextBlock Text="{TemplateBinding Content}"  />
                                                <!--<Image Source="/SASClient;component/Images/Shorting-Arrow-2.png"
                                                Width="10" Height="20"
                                           HorizontalAlignment="Left"
                                           Grid.Column="1"/>-->
                                            </DockPanel>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Right" Text="{Binding QtyOut}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>

                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn x:Name="Balance" MinWidth="80" MaxWidth="80" Header="Balance"  Width="Auto" SortMemberPath="TransactionDate" HeaderStyle="{StaticResource HeaderStyle20Right}" CanUserSort="False">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="{Binding ElementName=DateTime,Path=ActualWidth}"/>
                                            </Grid.ColumnDefinitions>
                                            <DockPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right">
                                                <TextBlock Text="{TemplateBinding Content}"  />
                                                <!--<Image Source="/SASClient;component/Images/Shorting-Arrow-2.png"
                                                Width="10" Height="20"
                                           HorizontalAlignment="Left"
                                           Grid.Column="1"/>-->
                                            </DockPanel>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Right" Text="{Binding Balance}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>

                            </DataGridTemplateColumn>

                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

            </StackPanel>
            <!--</ScrollViewer>-->
            <StackPanel Margin="10 0 0 0" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" VerticalAlignment="Bottom">
                <TextBlock   FontStyle="Italic" Foreground="Gray">
                    <Run Text="Amounts include "></Run>
                    <Run Text="{Binding TaxName}"/>
                </TextBlock>
                <TextBlock  Text="  Amounts are in  " FontStyle="Italic" Foreground="Gray"></TextBlock>
                <TextBlock Text="{Binding CurrencyName}" FontStyle="Italic" Foreground="Gray"></TextBlock>

            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="4" Grid.Row="5" HorizontalAlignment="Right"  Margin="10,10,10,0" VerticalAlignment="Bottom">
                <Button Content="Ok"  Margin="10 0" Style="{DynamicResource ButtonStyle}" Command="{Binding NavigaetoSalesCommand}" CommandParameter="New"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>

