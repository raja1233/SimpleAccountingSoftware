<UserControl x:Class="SASClient.Purchasing.View.StatementSubTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SASClient.Purchasing.View"
              mc:Ignorable="d" Height="auto" Width="auto"
             x:Name="MyUserControll">
    <Grid  HorizontalAlignment="Left" Height="auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
          
        </Grid.ColumnDefinitions>
        <RadioButton IsChecked="true"  Content="Unpaid Invoices" Style="{DynamicResource TabMenuButtonStyle}" Grid.Column="0"  Margin="10,0,0,0"
                    Command="{Binding UnPaidInvoicesClickCommand}">
        </RadioButton>
        <RadioButton Content="Invoices, Debit Notes, Payments"  Style="{DynamicResource TabMenuButtonStyle}" Grid.Column="1"  Margin="10,0,0,0"
                   Command="{Binding InvDebitPaymentsClickCommand}">
        </RadioButton>
        <RadioButton Content="Payment Due Days" Style="{DynamicResource TabMenuButtonStyle}"  Grid.Column="2"  Margin="10,0,0,0" 
                    Command="{Binding PaymentDueClickCommand}"/>
     
        <RadioButton Content="Credit days and Paid in days" Style="{DynamicResource TabMenuButtonStyle}" Grid.Column="3" Margin="10,0,0,0"
                     Command="{Binding CreditPaidDaysClickCommand}"/>
        
    </Grid>
</UserControl>
