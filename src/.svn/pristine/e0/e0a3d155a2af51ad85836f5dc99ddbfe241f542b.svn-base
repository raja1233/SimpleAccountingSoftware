<UserControl x:Class="SASClient.Customers.Views.CustomersDetailsSubTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SASClient.Customers.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="1024">
    <Grid  HorizontalAlignment="Left" Height="auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
            
        </Grid.ColumnDefinitions>


        <RadioButton IsChecked="{Binding CustomerDetailList1}" GroupName="grpCustomersDetails" Content="Company Details "  Style="{DynamicResource TabMenuButtonStyle}"  Grid.Column="0"  Margin="10,0,0,0"
                 KeyboardNavigation.AcceptsReturn="True"  Command="{Binding List1ClickCommand}"/>
        <RadioButton IsChecked="{Binding CustomerDetailList2}"  GroupName="grpCustomersDetails" Content="Balance"  Style="{DynamicResource TabMenuButtonStyle}"  Grid.Column="1"  Margin="10,0,0,0"
                  KeyboardNavigation.AcceptsReturn="True"   Command="{Binding List2ClickCommand}"/>
        <RadioButton IsChecked="{Binding CustomerDetailList3}"  GroupName="grpCustomersDetails"  Content="Bill To Address"  Style="{DynamicResource TabMenuButtonStyle}"  Grid.Column="2" Margin="10,0,0,0"
                   KeyboardNavigation.AcceptsReturn="True"  Command="{Binding List3ClickCommand}" />
        <RadioButton IsChecked="{Binding CustomerDetailList4}"  GroupName="grpCustomersDetails" Content="Ship To Address"  Style="{DynamicResource TabMenuButtonStyle}"  Grid.Column="3" Margin="10,0,0,0"
                    KeyboardNavigation.AcceptsReturn="True"  Command="{Binding List4ClickCommand}"/>
    </Grid>
</UserControl>
