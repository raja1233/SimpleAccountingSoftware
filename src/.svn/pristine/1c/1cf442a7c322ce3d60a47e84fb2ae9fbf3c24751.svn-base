<UserControl x:Class="SASClient.HomeScreen.Views.ToDoUnpaidDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SASClient.HomeScreen.Views"
             xmlns:helpers="clr-namespace:SDN.Common.Converter;assembly=SDN.Common"
             xmlns:my="clr-namespace:SDN.Common;assembly=SDN.Common"
             mc:Ignorable="d" Width="1024"
             d:DesignHeight="300" d:DesignWidth="300">
    <ScrollViewer  HorizontalAlignment="Stretch" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>
            <Grid.Resources>
                <helpers:TextInputToVisibilityConverter  x:Key="TextInputToVisibilityConverter"/>
                <helpers:DateTimeConverter x:Key="DateTimeFormatter"></helpers:DateTimeConverter>
                <helpers:BoolToVisibilityConverter x:Key="BoolToVisConverter"></helpers:BoolToVisibilityConverter>
                <helpers:MultipleParameterConverter x:Key="MultiParamterConverter"></helpers:MultipleParameterConverter>
                <Style x:Key="BorderStyle" TargetType="{x:Type Border}">
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                </Style>
                <!--Watermark style start here-->
                <SolidColorBrush x:Key="brushWatermarkBackground" Color="White" />
                <SolidColorBrush x:Key="brushWatermarkForeground" Color="Gray" />
                <SolidColorBrush x:Key="brushWatermarkBorder" Color="Black" />
                <!--Watermark style End here-->
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="256"></ColumnDefinition>
                <ColumnDefinition Width="256"></ColumnDefinition>
                <ColumnDefinition Width="256"></ColumnDefinition>
                <ColumnDefinition Width="246"></ColumnDefinition>
            </Grid.ColumnDefinitions>



            <RadioButton Grid.Column="0" Grid.Row="0" x:Name="radUnpaidSales" Command="{Binding ShowSalesCommand}"  Margin="10 12 10 2"   GroupName="radSalesOrPurchase" TabIndex="14" HorizontalAlignment="Left" IsChecked="{Binding  UnpaidSalesTrue, BindingGroupName=Group1, UpdateSourceTrigger=PropertyChanged}">Unpaid Sales Invoices</RadioButton>
            <RadioButton Grid.Column="1" Grid.Row="0" x:Name="radUnpaidPurchase"  Margin="0 12 10 2" Command="{Binding ShowPurchaseCommand}"   GroupName="radSalesOrPurchase" TabIndex="15"  HorizontalAlignment="Left"  IsChecked="{Binding UnpaidPurchaseTrue, BindingGroupName=Group1, UpdateSourceTrigger=PropertyChanged}">Unpaid Purchase Invoices</RadioButton>
            <RadioButton Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="2" x:Name="radUnpaidPurSales" Command="{Binding ShowBothCommand}"  Margin="0 12 10 2"   GroupName="radSalesOrPurchase" TabIndex="14" HorizontalAlignment="Left" IsChecked="{Binding  UnpaidPurSalesTrue, BindingGroupName=Group1, UpdateSourceTrigger=PropertyChanged}">Unpaid Sales &amp; Purchase Invoices</RadioButton>
            <RadioButton Grid.Column="3" Grid.Row="0" x:Name="radUnpaidSummary"  Margin="0 12 10 2" Command="{Binding ShowSummaryCommand}"   GroupName="radSalesOrPurchase" TabIndex="15"  HorizontalAlignment="Left"  IsChecked="{Binding UnpaidSummaryTrue, BindingGroupName=Group1, UpdateSourceTrigger=PropertyChanged}">Unpaid Invoices Summary</RadioButton>


            <DockPanel Grid.Column="0" VerticalAlignment="Top" Grid.Row="1" Height="30" Margin="55,13,0,0" Visibility="{Binding Path=ShowDetailTrue, Converter={StaticResource BoolToVisConverter}}" >
                <TextBlock 
                 Style="{StaticResource WaterMarkStyle}"  Text="Search" Foreground="{StaticResource brushWatermarkForeground}" >
                    <TextBlock.Visibility>
                        <MultiBinding Converter="{StaticResource TextInputToVisibilityConverter}">
                            <Binding ElementName="cmbSuppNameSearch" Path="Text.IsEmpty" />
                            <Binding ElementName="cmbSuppNameSearch" Path="IsFocused" />
                        </MultiBinding>
                    </TextBlock.Visibility>
                </TextBlock>
            </DockPanel>
            <ComboBox Visibility="{Binding Path=ShowDetailTrue, Converter={StaticResource BoolToVisConverter}}"  Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" IsEditable="True" Margin="50 10 0 0" HorizontalAlignment="Left" MaxHeight="30" VerticalAlignment="Top" MaxWidth="230" MinWidth="230"
                      ItemsSource="{Binding ListDueDayscmbSup}" Background="Transparent" BorderBrush="{StaticResource brushWatermarkBorder}"
                      DisplayMemberPath="Name" SelectedValuePath="Name" Name="cmbSuppNameSearch"
                      SelectedValue="{Binding SelectedSearchName ,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
            </ComboBox>
            <DockPanel  Grid.Column="1" VerticalAlignment="Top" Grid.Row="1" Height="30" Margin="45,13,0,0" Visibility="{Binding Path=ShowDetailTrue, Converter={StaticResource BoolToVisConverter}}" >
                <TextBlock 
                 Style="{StaticResource WaterMarkStyle}"  Text="Search" Foreground="{StaticResource brushWatermarkForeground}" >
                    <TextBlock.Visibility>
                        <MultiBinding Converter="{StaticResource TextInputToVisibilityConverter}">
                            <Binding ElementName="cmbInvSearch" Path="Text.IsEmpty" />
                            <Binding ElementName="cmbInvSearch" Path="IsFocused" />
                        </MultiBinding>
                    </TextBlock.Visibility>
                </TextBlock>
            </DockPanel>
            <ComboBox Visibility="{Binding Path=ShowDetailTrue, Converter={StaticResource BoolToVisConverter}}" Grid.Column="1" Grid.Row="1" IsEditable="True" Margin="25 10 0 0" HorizontalAlignment="Left" MaxHeight="30" VerticalAlignment="Top" MaxWidth="80" MinWidth="80"
                      ItemsSource="{Binding ListDueDayscmbInv}" Background="Transparent" BorderBrush="{StaticResource brushWatermarkBorder}"
                      DisplayMemberPath="InvoiceNo" SelectedValuePath="InvoiceNo" Name="cmbInvSearch"
                      SelectedValue="{Binding SelectedInvoiceNo ,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
            </ComboBox>
            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4"  Margin="10,40,7,0">
                <Grid>
                    <DataGrid x:Name="CustomGridLines" ItemsSource="{Binding BackGroundLines}" Grid.Column="0"  HorizontalAlignment="Left" Visibility="{Binding Path=ShowDetailTrue, Converter={StaticResource BoolToVisConverter}}"
                          Height="{Binding ElementName=dg1,Path=ActualHeight}" GridLinesVisibility="All"   Width="{Binding ElementName=dg1,Path=ActualWidth}"
                          HorizontalGridLinesBrush="LightGray" VerticalGridLinesBrush="LightGray" AutoGenerateColumns="False" 
                           HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled"
                          ColumnHeaderStyle="{StaticResource BackHeaderStyle20}" HeadersVisibility="All"  >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="" Binding="{Binding Col0}"  Width="40"></DataGridTextColumn>
                            <DataGridTextColumn Header="" Binding="{Binding Col1}"  Width="230"></DataGridTextColumn>
                            <DataGridTextColumn Header="" Binding="{Binding Col2}"  Width="80"></DataGridTextColumn>
                            <DataGridTextColumn Header="" Binding="{Binding Col3}"  Width="110"></DataGridTextColumn>
                            <DataGridTextColumn Header="" Binding="{Binding Col4}"  Width="100"></DataGridTextColumn>
                            <DataGridTextColumn Header="" Binding="{Binding Col5}"  Width="120"></DataGridTextColumn>
                            <DataGridTextColumn Header="" Binding="{Binding Col5}"  Width="90"></DataGridTextColumn>
                            <DataGridTextColumn Header="" Binding="{Binding Col0}"  Width="100"></DataGridTextColumn>
                            <DataGridTextColumn Header="" Binding="{Binding Col0}"  Width="115"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <DataGrid Background="Transparent"  IsTextSearchEnabled="True" ScrollViewer.VerticalScrollBarVisibility="Visible"  Visibility="{Binding Path=ShowDetailTrue, Converter={StaticResource BoolToVisConverter}}"
                          HorizontalScrollBarVisibility="Hidden"   Height="{Binding GridHeight}"  Grid.Column="0"  Margin="0 0 0 0"
                      GridLinesVisibility="All"  BorderThickness="1" x:Name="dg1" ItemsSource="{Binding ListDueDays}" CanUserAddRows="False" 
                           ColumnHeaderStyle="{StaticResource HeaderStyle20}"    CanUserDeleteRows="False" SelectionMode="Single" VerticalAlignment="Top" AutoGenerateColumns="False"   >
                        <DataGrid.Columns>
                            <DataGridTemplateColumn x:Name="Type" Width="40" MaxWidth="40" MinWidth="40"  Header="Type" SortMemberPath="Type"  >
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>

                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="{Binding ElementName=Type,Path=ActualWidth}"/>
                                            </Grid.ColumnDefinitions>
                                            <DockPanel Grid.Row="0" Grid.Column="0">
                                                <TextBlock Text="{TemplateBinding Content}">
                                                </TextBlock>
                                                <Image Source="/SASClient;component/Images/Shorting-Arrow-2.png"
                                                Width="10" Height="20"
                                           HorizontalAlignment="Left"  />
                                            </DockPanel>

                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock >
                                          
                                                <TextBlock Text="{Binding Type}" TextWrapping="Wrap" TextDecorations="None" />
                                          
                                       </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn x:Name="Name" Width="230" MaxWidth="230" MinWidth="230"  Header="Customer/Supplier Name" SortMemberPath="Name"  >
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>

                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="{Binding ElementName=Name,Path=ActualWidth}"/>
                                            </Grid.ColumnDefinitions>
                                            <DockPanel Grid.Row="0" Grid.Column="0">
                                                <TextBlock Text="{TemplateBinding Content}">
                                                </TextBlock>
                                                <Image Source="/SASClient;component/Images/Shorting-Arrow-2.png"
                                                Width="10" Height="20"
                                           HorizontalAlignment="Left"  />
                                            </DockPanel>

                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock >
                                         
                                                <TextBlock Text="{Binding Name}" TextWrapping="Wrap" TextDecorations="None" />
                                          
                                       </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn x:Name="InvoiceNo" Width="80" MaxWidth="80" MinWidth="80"  Header="Invoice No" SortMemberPath="Name"  >
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>

                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="{Binding ElementName=InvoiceNo,Path=ActualWidth}"/>
                                            </Grid.ColumnDefinitions>
                                            <DockPanel Grid.Row="0" Grid.Column="0">
                                                <TextBlock Text="{TemplateBinding Content}">
                                                </TextBlock>
                                                <Image Source="/SASClient;component/Images/Shorting-Arrow-2.png"
                                                Width="10" Height="20"
                                           HorizontalAlignment="Left"  />
                                            </DockPanel>

                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock >
                                         <Hyperlink Command="{Binding DataContext.NavigateToSupplierCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                                ><InlineUIContainer>   
                                                 <TextBlock Text="{Binding InvoiceNo}" TextWrapping="Wrap" TextDecorations="None" />
                                              </InlineUIContainer>
                                        <Hyperlink.CommandParameter>
                                            <MultiBinding Converter="{StaticResource MultiParamterConverter}">
                                                 <Binding Path="InvoiceNo"/>
                                                 <Binding Path="Type"/>
                                             </MultiBinding>
                                        </Hyperlink.CommandParameter></Hyperlink>
                                       </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn x:Name="AmountDue" Width="110" MaxWidth="110" MinWidth="110"  Header="Amount Due" SortMemberPath="AmountDue" HeaderStyle="{StaticResource HeaderStyle20Right}"  >
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>

                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="{Binding ElementName=AmountDue,Path=ActualWidth}"/>
                                            </Grid.ColumnDefinitions>
                                            <DockPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right">
                                                <TextBlock Text="{TemplateBinding Content}">
                                                </TextBlock>
                                                <Image Source="/SASClient;component/Images/Shorting-Arrow-2.png"
                                                Width="10" Height="20"
                                           HorizontalAlignment="Left"  />
                                            </DockPanel>

                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock >
                                       
                                                <TextBlock HorizontalAlignment="Right" Text="{Binding AmountDueStr}" TextWrapping="Wrap" TextDecorations="None" />
                                          
                                       </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn x:Name="InvoiceDate" Width="100" MaxWidth="100" MinWidth="100" Header="Invoice Date" Binding="{Binding Path=InvoiceDateStr}" SortMemberPath="InvoiceDate" HeaderStyle="{StaticResource HeaderStyle20Right}">
                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>

                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="{Binding ElementName=Balance,Path=ActualWidth}"/>
                                            </Grid.ColumnDefinitions>
                                            <DockPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right">
                                                <TextBlock Text="{TemplateBinding Content}">
                                                </TextBlock>
                                                <Image Source="/SASClient;component/Images/Shorting-Arrow-2.png"
                                                Width="10" Height="20"
                                           HorizontalAlignment="Left"  />
                                            </DockPanel>

                                        </Grid>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn x:Name="PaymentDueDate" MinWidth="120" MaxWidth="120" Header="Payment Due Date"  Width="Auto"
                                                SortMemberPath="PaymentDueDate" HeaderStyle="{StaticResource HeaderStyle20Right}">

                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>

                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="{Binding ElementName=PaymentDueDate,Path=ActualWidth}"/>
                                            </Grid.ColumnDefinitions>
                                            <DockPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right">
                                                <TextBlock Text="{TemplateBinding Content}">
                                                </TextBlock>
                                                <Image Source="/SASClient;component/Images/Shorting-Arrow-2.png"
                                                Width="10" Height="20"
                                           HorizontalAlignment="Left"  />
                                            </DockPanel>

                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock HorizontalAlignment="Right" > 
                                                <TextBlock HorizontalAlignment="Right" Text="{Binding PaymentDueDateStr}" TextWrapping="Wrap" />
                                       </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>

                            </DataGridTemplateColumn>
                            <DataGridTextColumn x:Name="CreditDays" Width="90" MaxWidth="90" MinWidth="90" Header="Credit Days" Binding="{Binding Path=CreditDays}" SortMemberPath="CreditDays" HeaderStyle="{StaticResource HeaderStyle20Right}">
                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>

                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="{Binding ElementName=ThirtyDay,Path=ActualWidth}"/>
                                            </Grid.ColumnDefinitions>
                                            <DockPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right">
                                                <TextBlock Text="{TemplateBinding Content}">
                                                </TextBlock>
                                                <Image Source="/SASClient;component/Images/Shorting-Arrow-2.png"
                                                Width="10" Height="20"
                                           HorizontalAlignment="Left"  />
                                            </DockPanel>

                                        </Grid>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn x:Name="OverDueDays" Width="100" MaxWidth="100" MinWidth="100" Header="Over Due Days" SortMemberPath="OverDueDays" Binding="{Binding Path=OverDueDays}" HeaderStyle="{StaticResource HeaderStyle20Right}" >
                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid >
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>

                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="{Binding ElementName=SixtyDay,Path=ActualWidth}"/>
                                            </Grid.ColumnDefinitions>
                                            <DockPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right">
                                                <TextBlock Text="{TemplateBinding Content}"   />
                                                <Image Source="/SASClient;component/Images/Shorting-Arrow-2.png"
                                                Width="10" Height="20"
                                           HorizontalAlignment="Left"
                                           Grid.Column="0" Grid.Row="0" />
                                            </DockPanel>


                                        </Grid>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn x:Name="PromisedDate" Width="115" MaxWidth="115" MinWidth="115" 
                                                SortMemberPath="PromisedDate" HeaderStyle="{StaticResource HeaderStyle20Right}">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition ></RowDefinition>

                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="{Binding ElementName=PromisedDate,Path=ActualWidth}" />
                                            </Grid.ColumnDefinitions>
                                            <DockPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right">
                                                <TextBlock TextWrapping="Wrap" >
                                     Promised Date
                                                </TextBlock>
                                                <Image  Source="/SASClient;component/Images/Shorting-Arrow-2.png"
                                                Width="10" Height="20" 
                                           HorizontalAlignment="Left" />
                                            </DockPanel>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox HorizontalAlignment="Right" BorderThickness="0" Text="{Binding PromisedDateStr,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" MaxLength="30"  Width="{Binding ElementName=PromisedDate,Path=ActualWidth}" >
                                        </TextBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <DataGrid x:Name="CustomGridLines1" ItemsSource="{Binding BackGroundLines}" Grid.Column="0"  HorizontalAlignment="Left" Visibility="{Binding Path=ShowSummaryTrue, Converter={StaticResource BoolToVisConverter}}"
                          Height="{Binding ElementName=dg1,Path=ActualHeight}" GridLinesVisibility="All"   Width="{Binding ElementName=dg,Path=ActualWidth}"
                          HorizontalGridLinesBrush="LightGray" VerticalGridLinesBrush="LightGray" AutoGenerateColumns="False" 
                           HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled"
                          ColumnHeaderStyle="{StaticResource BackHeaderStyle20}" HeadersVisibility="All"  >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="" Binding="{Binding Col0}"  Width="195"></DataGridTextColumn>
                            <DataGridTextColumn Header="" Binding="{Binding Col1}"  Width="195"></DataGridTextColumn>
                            <DataGridTextColumn Header="" Binding="{Binding Col2}"  Width="195"></DataGridTextColumn>
                            <DataGridTextColumn Header="" Binding="{Binding Col4}"  Width="195"></DataGridTextColumn>
                            <DataGridTextColumn Header="" Binding="{Binding Col3}"  Width="195"></DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <DataGrid Background="Transparent"  IsTextSearchEnabled="True" ScrollViewer.VerticalScrollBarVisibility="Visible" Visibility="{Binding Path=ShowSummaryTrue, Converter={StaticResource BoolToVisConverter}}"
                          HorizontalScrollBarVisibility="Hidden"   Height="{Binding GridHeight}"  Grid.Column="0"  Margin="0 0 0 0"
                      GridLinesVisibility="All"  BorderThickness="1" x:Name="dg" ItemsSource="{Binding TodoSummary}" CanUserAddRows="False" 
                           ColumnHeaderStyle="{StaticResource HeaderStyle20}"    CanUserDeleteRows="False" SelectionMode="Single" VerticalAlignment="Top" AutoGenerateColumns="False"   >
                        <DataGrid.Columns>
                            <DataGridTemplateColumn x:Name="SumPaymentDueDate" Width="195" MaxWidth="195" MinWidth="195"  Header="Payment Due Date" SortMemberPath="PaymentDueDate"  >
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="{Binding ElementName=SumPaymentDueDate,Path=ActualWidth}"/>
                                            </Grid.ColumnDefinitions>
                                            <DockPanel Grid.Row="0" Grid.Column="0">
                                                <TextBlock Text="{TemplateBinding Content}">
                                                </TextBlock>
                                                <Image Source="/SASClient;component/Images/Shorting-Arrow-2.png"
                                                Width="10" Height="20"
                                           HorizontalAlignment="Left"  />
                                            </DockPanel>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                                <TextBlock Text="{Binding PaymentDueDateStr}" TextWrapping="Wrap" TextDecorations="None" />
                                       </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn x:Name="SumPromisedDate" Width="195" MaxWidth="195" MinWidth="195"  Header="Promised Date" SortMemberPath="PromisedDate"  >
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="{Binding ElementName=SumPromisedDate,Path=ActualWidth}"/>
                                            </Grid.ColumnDefinitions>
                                            <DockPanel Grid.Row="0" Grid.Column="0">
                                                <TextBlock Text="{TemplateBinding Content}">
                                                </TextBlock>
                                                <Image Source="/SASClient;component/Images/Shorting-Arrow-2.png"
                                                Width="10" Height="20"
                                           HorizontalAlignment="Left"  />
                                            </DockPanel>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock >
                                                <TextBlock Text="{Binding PromisedDateStr}" TextWrapping="Wrap" TextDecorations="None" />
                                       </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn x:Name="SalesInvoiceNo" Width="195" MaxWidth="195" MinWidth="195"  Header="Unpaid Sales Invoices" SortMemberPath="SalesInvoiceNo"  >
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>

                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="{Binding ElementName=SalesInvoiceNo,Path=ActualWidth}"/>
                                            </Grid.ColumnDefinitions>
                                            <DockPanel Grid.Row="0" Grid.Column="0">
                                                <TextBlock Text="{TemplateBinding Content}">
                                                </TextBlock>
                                                <Image Source="/SASClient;component/Images/Shorting-Arrow-2.png"
                                                Width="10" Height="20"
                                           HorizontalAlignment="Left"  />
                                            </DockPanel>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock >
                                                <TextBlock Text="{Binding SalesInvoiceNo}" TextWrapping="Wrap" TextDecorations="None" />
                                       </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn x:Name="PurchaseInvoiceNo" Width="195" MaxWidth="195" MinWidth="195"  Header="Unpaid Purchase Invoices" SortMemberPath="PurchaseInvoiceNo" HeaderStyle="{StaticResource HeaderStyle20Right}"  >
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="{Binding ElementName=PurchaseInvoiceNo,Path=ActualWidth}"/>
                                            </Grid.ColumnDefinitions>
                                            <DockPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right">
                                                <TextBlock Text="{TemplateBinding Content}">
                                                </TextBlock>
                                                <Image Source="/SASClient;component/Images/Shorting-Arrow-2.png"
                                                Width="10" Height="20"
                                           HorizontalAlignment="Left"  />
                                            </DockPanel>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock >
                                                <TextBlock HorizontalAlignment="Right" Text="{Binding PurchaseInvoiceNoStr}" TextWrapping="Wrap" TextDecorations="None" />
                                       </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn x:Name="NetAmount" Width="195" MaxWidth="195" MinWidth="195" Header="Net Amount" Binding="{Binding Path=NetAmountStr}" SortMemberPath="NetAmount" HeaderStyle="{StaticResource HeaderStyle20Right}">
                                <DataGridTextColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="{Binding ElementName=NetAmount,Path=ActualWidth}"/>
                                            </Grid.ColumnDefinitions>
                                            <DockPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right">
                                                <TextBlock Text="{TemplateBinding Content}">
                                                </TextBlock>
                                                <Image Source="/SASClient;component/Images/Shorting-Arrow-2.png"
                                                Width="10" Height="20"
                                           HorizontalAlignment="Left"  />
                                            </DockPanel>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTextColumn.HeaderTemplate>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </StackPanel>
            <StackPanel Margin="10 0 0 0" Grid.Row="2" VerticalAlignment="Bottom" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" >
                <TextBlock   FontStyle="Italic" Foreground="Gray">
                    <Run Text="Amounts include"></Run>
                    <Run Text="{Binding TaxName}"></Run>
                </TextBlock>
                <TextBlock  Text="  Amounts are in " FontStyle="Italic" Foreground="Gray"></TextBlock>
                <TextBlock Text="{Binding CurrencyName}" FontStyle="Italic" Foreground="Gray"></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Grid.Column="3" Grid.Row="2" HorizontalAlignment="Right"  Margin="10,10,0,0" >
                <!--<Button Content="Save"  Margin="10 0" Style="{DynamicResource ButtonStyle}" Command="{Binding SavePromisedDate}" CommandParameter="New" Visibility="{Binding Path=ShowDetailTrue, Converter={StaticResource BoolToVisConverter}}"/>-->
                <Button Content="Close"  Margin="10 0 0 0" Style="{DynamicResource ButtonStyle}"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>

